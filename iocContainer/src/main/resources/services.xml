<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation=
               "http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="userService" class="com.bakigoal.service.impl.UserServiceImpl"
          init-method="init" destroy-method="destroy" scope="prototype"/>

    <alias name="userService" alias="usersAlias"/>

    <bean id="userFactoryMethod" class="com.bakigoal.service.impl.UserServiceFactoryImpl"
          init-method="init" destroy-method="destroy" factory-method="getInstance"/>

</beans>